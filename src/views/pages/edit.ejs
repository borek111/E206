<%- include('../partials/header', { token: token }) %>
    <main>
        <% if (typeof error !=='undefined' && error) { %>
            <%= error %>
                <% } %>
                    <form action="/ToDoLists/edit/<%= toDoList._id %>" method="POST">
                        tytuł: <input type="text" name="title" value="<%= toDoList.title %>" required minlength="3">
                        <br>
                        tresc:<textarea name="tresc" required minlength="3"><%= toDoList.tresc %></textarea> <br>
                        status:
                        <select name="status" required>
                            <option value="Do zrobienia" <%=toDoList.status==='Do zrobienia' ? 'selected' : '' %>>Do
                                zrobienia</option>
                            <option value="W trakcie" <%=toDoList.status==='W trakcie' ? 'selected' : '' %>>W trakcie
                            </option>
                            <option value="Zakończone" <%=toDoList.status==='Zakończone' ? 'selected' : '' %>>Zakończone
                            </option>
                        </select> <br>
                        Data rozpoczęcia: <input type="date" name="dataRozpoczecia"
                            value="<%= toDoList.dataRozpoczecia %>" required>
                        <br>
                        Data zakończenia: <input type="date" name="dataZakonczenia"
                            value="<%= toDoList.dataZakonczenia %>" required> <br>
                        Pilne?: <input type="checkbox" name="pilne" <%=toDoList.pilne ? 'checked' : '' %>> <br>
                        <button type="submit">Zapisz zmiany</button>
                    </form>
    </main>
    <%- include('../partials/footer') %>